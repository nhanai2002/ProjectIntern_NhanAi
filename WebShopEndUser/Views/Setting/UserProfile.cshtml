@using static WebShopCore.Const.SysEnum;
@model WebShopCore.ViewModel.User.UserCrudModel
@{
    ViewData["Title"] = "Thông tin về người dùng";
}

<a asp-action="ChangePassword" asp-controller="Setting" style="color:white">
    <button class="btn btn-secondary">Đổi mật khẩu</button>
</a>
<a asp-action="UpdateAvatar" asp-controller="Setting" style="color:white">
    <button class="btn btn-secondary">Đổi ảnh đại diện</button>
</a>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserProfile" asp-controller="Setting" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label>Tài khoản</label>
                <input asp-for="UserName" class="form-control" readonly/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="field">
                <label>Giới tính</label>
                <select class="form-select" asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option selected="selected" value="">Chọn giới tính</option>
                </select>
            </div>           
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>

        <a asp-action="Index" asp-controller="Home" style="color:white">
            <button class="btn btn-secondary">Trở về</button>
        </a>
    </div>
</div>
