@model WebShopCore.ViewModel.User.UserCrudModel
@{
    ViewData["Title"] = "Đổi avatar";
}
<h1>Đổi avatar</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateAvatar" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="FileImage" class="control-label"></label>
                <input type="file" asp-for="FileImage" multiple />
                <span asp-validation-for="FileImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
