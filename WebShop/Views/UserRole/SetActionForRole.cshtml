@model WebShopCore.ViewModel.UserRole.RoleCrudModel
@{
    ViewData["Title"] = "Set action for role";
    Layout = "_HomeAdminLayout";
    ViewBag.active = "3";
}


<div class="admin__form">
    <form asp-action="SetActionForRole" asp-controller="UserRole" method="post" class="admin__form-form">
        <h2>Phân quyền cho từng chức năng</h2>
        <input type="hidden" asp-for="RoleId" />
        <div class="admin__form-item">
            <div class="admin__form-lable">Quyền (Vai trò):</div>
            <input asp-for="Name" readonly class="admin__form-input" />
        </div>

        <div class="grid category-form__inside">
            <div class="grid__row checkbox-role__row">
                @foreach (var controller in Model.ctrls)
                {
                        <div class="grid__half-width checkbox-role__row-item">
                            <h2>@controller.DisplayName</h2>
                            @foreach (var action in controller.Actions)
                            {
                                <div class="checkbox-list">
                                    <input type ="checkbox" id="@action.ActionName" name="SelectedActions" @(action.isChecked ? "checked" : "") value="@controller.ControllerName.@action.ActionName" />
                                    <label class="checkbox-list__lable" for="@action.ActionName">@action.DisplayName</label>
                                </div>
                            }
                        </div>
                }
                </div>
        </div>

        <div class="admin__form-btn">
            <a asp-action="Index" asp-controller="UserRole" class="btn btn-comback">
                Trở về
            </a>
            <button type="submit" class="btn btn-checkout">
                Save
            </button>
        </div>
    </form>

</div>


