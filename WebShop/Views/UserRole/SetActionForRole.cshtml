@model WebShopCore.ViewModel.UserRole.RoleCrudModel
@{
    ViewData["Title"] = "Set action for role";
}

<h1>Set action for role</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SetActionForRole" asp-controller="UserRole" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" />
            <label>Role : </label>
            <input asp-for="Name" style="border: none;" readonly/>
            @foreach (var controller in Model.ctrls)
            {
                <h2>@controller.DisplayName</h2>

                foreach (var action in controller.Actions)
                {

                    <div>
                        <input type="checkbox" id="@action.ActionName" name="SelectedActions" @(action.isChecked ? "checked" : "") value="@controller.ControllerName.@action.ActionName">
                        <label for="@action.ActionName">@action.DisplayName</label>
                    </div>
                }
            }


            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
