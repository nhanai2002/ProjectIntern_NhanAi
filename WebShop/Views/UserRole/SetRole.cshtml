@model WebShopCore.ViewModel.UserRole.SetRoleViewModel
@{
    ViewData["Title"] = "Set role";
    Layout = "_HomeAdminLayout";
    ViewBag.active = "3";
}


<div class="admin__form">
    <form asp-action ="SetRole" asp-controller="UserRole" method="post" class="admin__form-form">
        <h2>Phân quyền</h2>
        <input type="hidden" asp-for="UserId" />
        <div class="admin__form-item">
            <div class="admin__form-lable">Tài khoản:</div>
            <input asp-for="Username" readonly class="admin__form-input" />
        </div>
        <div class="admin__form-item">
            <div class="admin__form-lable">Danh sách các quyền:</div>
            <select asp-for="RoleId" asp-items="@(new SelectList(Model.Roles, "RoleId", "Name"))" class="category-search__select">
                <option selected="selected" value="">Chọn vai trò</option>
            </select>
        </div>

        <div class="admin__form-btn">
            <a asp-action="Index" asp-controller="UserRole" class="btn btn-comback">
                Trở về
            </a>
            <button type="submit" class="btn btn-checkout">
                Save
            </button>
        </div>
    </form>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>

}
